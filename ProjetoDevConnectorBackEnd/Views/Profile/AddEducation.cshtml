@model  EducationViewModel

@{
    ViewData["Title"] = "Welcome To The Developer Connector";
}

<section class="container">
    <h1 class="large text-primary">
        Add Your Education
    </h1>
    <p class="lead">
        <i class="fas fa-graduation-cap"></i> Add any school, bootcamp, etc that
        you have attended
    </p>
    <small>* = required field</small>
    <div asp-validation-summary="All" class="lead text-primary"></div>

    <form class="form" method="post" asp-action="AddEducation">
        <div class="form-group">
            <input type="text"
                   placeholder="* School or Bootcamp"
                   asp-for="SchoolBootcamp"
                   required />
        </div>
        <div class="form-group">
            <input type="text"
                   placeholder="* Degree or Certificate"
                   asp-for="DegreeCertificate"
                   required />
        </div>
        <div class="form-group">
            <input type="text" placeholder="Field Of Study" asp-for="FieldStudy" />
        </div>
        <div class="form-group">
            <h4>From Date</h4>
            <input type="date" asp-for="FromDate" />
        </div>
        <div class="form-group">
            <h4>To Date</h4>
            <input type="date" asp-for="ToDate" />
        </div>
        <div class="form-group">
            <p>
                @Html.EditorFor(x => x.CurrentSchool) Current School
            </p>
        </div>
        <div class="form-group">
            <textarea asp-for="ProgramDescription"
                      cols="30"
                      rows="5"
                      placeholder="Program Description" maxlength="350"></textarea>
        </div>
        <input type="submit" class="btn btn-primary my-1" />
        <a class="btn my-1" asp-action="Dashboard">Go Back</a>
    </form>
</section>
